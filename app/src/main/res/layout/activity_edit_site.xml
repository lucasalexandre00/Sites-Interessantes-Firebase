<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.EditSiteActivity">

    <EditText
        android:id="@+id/edittext_title_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:hint="Título do site"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_url_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="Endereço do site"
        android:inputType="textUri"
        app:layout_constraintEnd_toEndOf="@+id/edittext_title_update"
        app:layout_constraintStart_toStartOf="@+id/edittext_title_update"
        app:layout_constraintTop_toBottomOf="@+id/edittext_title_update" />

    <TextView
        android:id="@+id/textview1_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Selecione a TAG"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_url_update" />

    <Spinner
        android:id="@+id/spinner_tag_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/edittext_title_update"
        app:layout_constraintStart_toStartOf="@+id/edittext_title_update"
        app:layout_constraintTop_toBottomOf="@+id/textview1_update" />

    <Button
        android:id="@+id/button_site_save_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edittext_title_update"
        app:layout_constraintStart_toStartOf="@+id/edittext_title_update"
        app:layout_constraintTop_toBottomOf="@+id/spinner_tag_update" />


</androidx.constraintlayout.widget.ConstraintLayout>